{% extends "::base.html.twig" %}

{% block body %}

    <div class="circleSep">
        <div class="circleLeft"></div>
        <div class="circleRight"></div>
        <div class="sep"></div>
    </div>

    <!-- Begin Sub Page Banner -->
    <div id="bannerWide" class="subBanner"> <img src="{{ asset('img/sub-banner.png') }}" alt="" class="bannerBg">
        <div class="bannerCon">
            <h2><span class="blue">Blog</span> {{ blog.titre }}</h2>
            <p><a href="{{ path('blog_ornoir_homepage') }}">Accueil</a> » <a href="{{ path('blog_ornoir_blog_all') }}">Blog</a> » <a href="{{ path('blog_ornoir_blog_single', {'id' : blog.id}) }}">Article {{ blog.titre }}</a></p>
        </div>

    </div>
    <!-- End Sub Page Banner -->
    <div class="sep"></div>


    <!-- Begin Main Container -->
    <div id="mainContainer">

        <div id="mainContent" class="blogMain">

            <!-- Single Post -->
            <article class="post single">
                <header>
                    <h2 class="title"><a href="#"><span class="blue">BLOG</span> POSTS TITLE</a></h2>
                    <div class="metaData">
                        <p><span class="blogDate metaIcon">{{ blog.dateAjout|date('d M Y') }} Ajouté par <a href="#">{{ blog.editeur|upper }}</a></span> <span class="metaIcon comments"><a href="#">{{ blog.blogcommentaire|length }} Commentaires</a></span></p>
                    </div>
                </header>
                <div class="content">
                    <div class="frame_round floatLeft"><img src="{{ asset(blog.image.AssetPath) }}" width="300" alt=""></div>
                    <h2><span class="blue">{{ blog.titre }}</span> </h2>
                    <p> {{ blog.description|raw }} </p>
                    <div class="floatRight"><div class="frame_round floatRight"><img src="{{ asset(blog.image.AssetPath2) }}" alt="" class="floatLeft" width="150" height="150"></div><p class="wp-caption-text">Image With Caption</p></div>
                    
                    <div class="sep"></div>


                    <footer class="blogFooter clearfix">
                        <div class="border_bottom">
                            <div class="socialBlog floatLeft">
                                <p>Réseaux sociaux :</p>
                                <div class="tweet"> <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a>
                                </div>

                                <div class="facebookLike">
                                    <div class="fb-like" data-send="false" data-layout="button_count" data-width="74" data-show-faces="false"></div>
                                </div>

                                <div class="google+"> <g:plusone size="medium"></g:plusone>
                                </div>
                                <br class="clearBoth">
                            </div>

                            <!--<a href="single-blog.htm" title="Continue Reading" class="button">Continue Reading...</a>--></div>
                    </footer>
                </div>
            </article>

            <!-- Author Box -->
            <article class="authorBox">
                <h2>A propos de <span class="blue">l'auteur</span></h2>
                <div class="border_bottom">
                    <div class="frame_round floatLeft">
                        <img src="{{ asset(blog.editeur.adresse.image.AssetPath) }}" height="85" alt=""></div>
                        <p class="authorName"> {{ blog.editeur.adresse.nom }} ({{ blog.editeur|upper }})</p>
                    <p>{{ blog.editeur.adresse.bibliographie }}</p><br>

                </div>
            </article>

            <!-- Comment Section -->
            <article class="commentSection">
                <h2><span class="blue">({{ blog.blogcommentaire|length }})</span> Commentaires</h2>
                <ul class="comment-list">
                    {% for commentaire in blog.blogcommentaire %}
                    <li>
                        <div class="comment-body">
                            <div class="frame_round floatLeft">
                                <img src="{{ asset('img/avatar.png') }}" width="54" height="54" alt="">
                            </div>
                            <p class="blue">{{ commentaire.pseudo }} <span class="date">{{ commentaire.date|date('d M Y') }}</span></p>
                            {{ commentaire.commentaire|raw }}
                        </div>

                    </li>

                    {% endfor %}
                </ul>
            </article>
            <div class="comment-form contact">
                <h2><span class="blue">Laisser votre</span> Commentaire</h2>

                <form action="{{ path('blog_ornoir_blog_single', {'id' : blog.id}) }}" method="POST" {{ form_enctype(form_commentaire) }}>
                    {{ form_widget(form_commentaire) }}
                    <br><br>
                    <p>
                        <button type="submit" class="submitBtn">Ajouter</button>
                    </p>
                </form>
                
            </div>
        </div>
        <div class="sep"></div>
        <article class="call_out blue clearfix">
            <div class="content">
                <h2>BESOIN <span class="blue">D'AIDE ?</span></h2>
                <p>Besoin de nous contacter? cliquez sur le lien.</p>
            </div>
            <a href="{{ path('blog_ornoir_contact') }}" class="button_round">Contacter-nous</a> </article>

        <div class="sep"></div>   
    </div>
{% endblock %}
