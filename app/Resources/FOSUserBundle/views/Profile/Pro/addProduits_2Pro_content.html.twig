{% trans_default_domain 'FOSUserBundle' %}
<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-9 col-xs-12">
                <div class="page-content checkout-page">
                    <div class="page-title">
                        <h2 class="checkout-step">Ajout de motif ({{ produit_1.nom|capitalize }})</h2>
                    </div>

                    <div class="box-border">
                        <ul>
                            <li class="row">
                                <div class="col-sm-5">
                                    <button type="button" class="button" data-toggle="collapse" data-target="#ajout_motif"><i class="fa fa-arrow-down"></i> &nbsp; &nbsp;Ajouter un nouveau motif</button>
                                        <div id="ajout_motif" class="collapse">
                                         <form action="{{ path('produit_pro_new_motif', {'id' : produit_1.id}) }}" {{ form_enctype(form_motif) }}  method="POST">
                                            {{ form_start(form_motif) }}
                                            {{ form_errors(form_motif) }}
                                            {{ form_row(form_motif.libelle) }}<br>
                                            {{ form_row(form_motif.file) }}
                                            <button class="button" type="submit"><i class="fa fa-check"></i>&nbsp; &nbsp;<span>Ajouter</span></button><br>
                                            {{ form_end(form_motif) }}<br>
                                        </form >
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                </div>
                            </li>
                            <br><br>
                            
                            <li class="row">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                <div class="col-sm-3">
                                    {{ form_row(form.libelle) }}
                                </div>
                                <div class="col-sm-3">
                                    <div class="top-cart-contain">
                                        <div class="mini-cart">
                                            <div data-toggle="dropdown" data-hover="dropdown" class="basket dropdown-toggle"> 
                                                <a href>
                                                    <div class="cart-icon">&nbsp; Voir motifs</div>
                                                </a>
                                            </div>
                                            <div>
                                                <div class="top-cart-content">
                                                    <div class="block-subtitle hidden-xs"></div>
                                                    <ul id="cart-sidebar" class="mini-products-list">
                                                        {% for libelle in libelles %}
                                                            <li class="item last odd"> 
                                                                <a title="{{ libelle.libelle|capitalize }}" class="product-image">
                                                                    <img src="{{ libelle.AssetPath|imagine_filter('cartThumbMenuItem') }}" alt="">
                                                                </a>
                                                                <div class="product-details">
                                                                    <p class="product-name">
                                                                        <a>{{ libelle.libelle|capitalize }}</a> 
                                                                    </p>
                                                            </li>
                                                        {% endfor %}

                                                    </ul>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <br><br>
                            
                            <li class="row">
                                <div class="col-sm-3">
                                    {{ form_row(form.etat) }}
                                </div>
                                <div class="col-sm-2">
                                </div>
                                <div class="col-sm-3">
                                    {{ form_row(form.reduction) }}
                                </div><!--/ [col] -->
                            </li>
                            <br><br>
                            <h3 class="checkout-step">Vendez en France (€)</h3>
                            <br>
                            <li class="row">
                                <div class="col-sm-2">
                                    {{ form_row(form.europrix) }}
                                </div>
                                <div class="col-sm-1">
                                </div>
                                <div class="col-sm-5">
                                    {{ form_row(form.europrixCommande) }}
                                </div>
                                <div class="col-sm-4">
                                    {{ form_label(form.europrecommande) }}
                                    {{ form_row(form.europrecommande.0) }}
                                    {{ form_row(form.europrecommande.1) }}
                                </div>
                            </li>
                            <br>
                            <br>
                            <h3 class="checkout-step">Vendez au Cameroun  (F CFA)</h3>
                            <br>
                            <li class="row">
