{% trans_default_domain 'FOSUserBundle' %}
<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-8 col-xs-12">
                <div class="page-content checkout-page">
                    <div class="page-title">
                        <h2 class="checkout-step">Modification produit (2/3)</h2>
                    </div>
                    {% for produit in produits %}
                        <h4> <img src="{{ produit.libelle.AssetPath|imagine_filter('MotifThumb') }}" alt="">&nbsp; {{ produit.libelle.libelle|capitalize }} ({% if produit.etat %} Neuf {% else %} Occasion{% endif %})</h4>
                        <div class="box-border">
                        <ul>
                            <li class="row">
                                <div class="col-sm-3">
                                    <label class="required">Première image</label>
                                    <br><img src="{{ produit.picture.AssetPath|imagine_filter('commandeThumb') }}" alt="">
                                </div>
                                {% if produit.picture.path2 %}
                                <div class="col-sm-3">
                                    <label class="required">Seconde image</label>
                                    <br><img src="{{ produit.picture.AssetPath2|imagine_filter('commandeThumb') }}" alt="">
                                </div>
                                {% endif %}<!--/ [col] -->
                                {% if produit.picture.path3 %}
                                <div class="col-sm-3">
                                    <label class="required">Troisième image</label>
                                    c<img src="{{ produit.picture.AssetPath3|imagine_filter('commandeThumb') }}" alt="">
                                </div>
                                {% endif %}
                                <div class="col-sm-3">
                                    <label class="required"></label><br><br>
                                    <a title="Modifier le produit motif {{ produit.libelle.libelle|capitalize }}" href="{{ path('produit_pro_edit_21', { 'id' : produit.id }) }}"><button class="add-cart button button-sm"><i class="fa fa-pencil"></i></button>&nbsp;&nbsp;</a><br>
                                </div>
                            </li>
                        </ul>
                    </div><br>
                    {% endfor %}
                    <br>
                    <br>
                    <a href="{{ path('produit_pro_edit_1', { 'id' : produit1.id }) }}"><button class="button pull-left"><i class="fa fa-angle-double-left"></i>&nbsp; &nbsp;<span>Retour</span></button></a>
                </div>
            </div>
        <aside class="right sidebar col-sm-3 col-xs-12">
            {% include 'FOSUserBundle:Profile:Navigation/menuPro.html.twig' %}
            <br><br>
            {% include 'FOSUserBundle:Profile:Navigation/informationsPro.html.twig' %}
        </aside>
        </div>
        
    </div>
</div>
</section>

